# E-commerce Sentiment Analysis - Environment Configuration Template
# Copy this file to .env and replace the placeholder values

# ======================================================================
# HUGGING FACE CONFIGURATION
# ======================================================================
# Your Hugging Face API Token (required for deployment)
# Get it from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HF_USERNAME=your_username

# Hugging Face Space Configuration
HF_SPACE_NAME=ecommerce-sentiment-analysis
HF_SPACE_URL=https://huggingface.co/spaces/${HF_USERNAME}/${HF_SPACE_NAME}

# ======================================================================
# DATABASE CONFIGURATION
# ======================================================================
DATABASE_URL=postgres://postgres:postgres@localhost:5433/ecommerce_sentiment
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ecommerce_sentiment
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# ======================================================================
# MICROSERVICES CONFIGURATION
# ======================================================================
# Service URLs for local development
DATA_COLLECTION_URL=http://localhost:9001
DATA_PROCESSING_URL=http://localhost:8002
MODEL_TRAINING_URL=http://localhost:8003
RETRIEVAL_SERVICE_URL=http://localhost:8004
INFERENCE_SERVICE_URL=http://localhost:8005
FRONTEND_SERVICE_URL=http://localhost:8006

# Service URLs for Docker environment
DOCKER_DATA_COLLECTION_URL=http://data_collection:8000
DOCKER_DATA_PROCESSING_URL=http://data_processing:8000
DOCKER_MODEL_TRAINING_URL=http://model_training:8000
DOCKER_RETRIEVAL_SERVICE_URL=http://retrieval:8000
DOCKER_INFERENCE_SERVICE_URL=http://inference:8000
DOCKER_FRONTEND_SERVICE_URL=http://frontend:8000

# ======================================================================
# MODEL CONFIGURATION
# ======================================================================
# Model paths and configurations
MODEL_CHECKPOINT_DIR=./models/checkpoints
MODEL_NAME=distilbert-base-uncased
SENTIMENT_MODEL_PATH=./models/checkpoints/sentiment_model.pth
BERT_MODEL_NAME=bert-base-uncased

# ======================================================================
# DATA CONFIGURATION
# ======================================================================
# Data paths
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
REVIEWS_CSV_PATH=./data/processed/reviews.csv
EMBEDDINGS_NPY_PATH=./data/processed/embeddings.npy
LOGS_DIR=./logs

# Dataset configuration
DATASET_NAME=amazon_polarity
MAX_REVIEWS=1000
TRAIN_TEST_SPLIT=0.8

# ======================================================================
# TRAINING CONFIGURATION
# ======================================================================
# Training parameters
TRAINING_EPOCHS=3
BATCH_SIZE=8
LEARNING_RATE=2e-5
MAX_LENGTH=512
DEVICE=cpu

# ======================================================================
# DOCKER CONFIGURATION
# ======================================================================
# Docker registry (optional - for pushing images)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ======================================================================
# LOGGING AND MONITORING
# ======================================================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ======================================================================
# DEVELOPMENT SETTINGS
# ======================================================================
DEBUG=false
DEVELOPMENT_MODE=false
RELOAD=true
HOST=0.0.0.0
PORT=8000